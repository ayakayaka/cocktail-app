<h2>Ingredient</h2>
<%= @cocktail.name %>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail)%>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
<% end %>
<%= link_to "back", cocktails_path %>
